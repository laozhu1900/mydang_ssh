<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.jar.domain.ReceiveAddr" table="d_d_receive_address" catalog="mydang">
		<id name="id" type="integer">
			<column name="id" />
			<generator class="native" />
		</id>
		
		<property name="userId" type="integer">
			<column name="user_id" />
		</property>
		
		<property name="receiveName" type="string">
			<column name="receive_name"  />
		</property>
		
		<property name="fullAddress" type="string">
			<column name="full_address"  />
		</property>
		<property name="postalCode" type="string">
			<column name="postal_code"  />
		</property>
		<property name="mobile" type="string">
			<column name="mobile" />
		</property>
		
		<property name="phone" type="string">
			<column name="phone"  />
		</property>
		
		<property name="isDefault" type="integer">
			<column name="is_default" />
		</property>
		 
		
		
	</class>

</hibernate-mapping>
